<Window x:Class="TestGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestGUI"
        xmlns:avalonedit="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
        mc:Ignorable="d"
        Title="LanD Test IDE" Height="477.801" Width="712.931">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0" Grid.ColumnSpan="3">
            <RadioButton GroupName="ParsingTypeRadioButton" Name="ParsingLL" Content="LL" IsChecked="True"/>
            <RadioButton GroupName="ParsingTypeRadioButton" Name="ParsingLR" Content="LR" IsEnabled="False" />
        </ToolBar>

        <TabControl Grid.Column="1" Grid.Row="1">
            <TabItem>
                <TabItem.Header>
                    <Span>
                        <Label>Грамматика .land</Label>
                    </Span>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="75*"></RowDefinition>
                        <RowDefinition Height="31"></RowDefinition>
                        <RowDefinition Height="25*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <ToolBar Grid.Row="0">
                        <Button Name="LoadGrammarButton" Content="Загрузить грамматику" Click="LoadGrammarButton_Click"/>
                        <Separator></Separator>
                        <Button Name="SaveGrammarButton" Click="SaveGrammarButton_Click">Сохранить</Button>
                        <Separator></Separator>
                        <Button Name="NewGrammarButton" Click="NewGrammarButton_Click">Новая</Button>
                        <Separator></Separator>
                        <Button Name="BuildParserButton" Click="BuildParserButton_Click">Сгенерировать парсер</Button>
                        <Separator></Separator>
                        <Separator></Separator>
                        <Label Name="GrammarFileName"></Label>
                    </ToolBar>
                    <avalonedit:TextEditor
                        Name="GrammarEditor"
                        Grid.Row="1"
                        FontFamily="Consolas"
                        TextChanged="GrammarEditor_TextChanged"
                        FontSize="12pt">
                    </avalonedit:TextEditor>
                    <StatusBar Name="ParserStatus" Grid.Row="2">
                        <Label Name="ParserStatusLabel"></Label>
                    </StatusBar>
                    <ListBox
                        Name="ParserBuidingOutput"
                        FontSize="14pt"
                        Grid.Row="3">
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Span>
                        <Label>Тестовый файл</Label>
                    </Span>
                </TabItem.Header>

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="65*"></RowDefinition>
                        <RowDefinition Height="31"></RowDefinition>
                        <RowDefinition Height="45*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <ToolBar Grid.Row="0">
                        <Button Name="OpenFileButton" Content="Открыть файл" Click="OpenFileButton_Click"/>
                        <Separator></Separator>
                        <Button Name="ClearFileButton" Content="Очистить" Click="ClearFileButton_Click"/>
                        <Separator></Separator>
                        <Button Name="ParseButton" Click="ParseButton_Click">Разобрать файл</Button>
                        <Separator></Separator>
                        <Separator></Separator>
                        <Label Name="TestFileName"></Label>
                    </ToolBar>
                    <avalonedit:TextEditor
                        Name="FileEditor"
                        Grid.Row="1"
                        FontFamily="Consolas"
                        FontSize="12pt">
                    </avalonedit:TextEditor>
                    <StatusBar Name="ProgramStatus" Grid.Row="2">
                        <Label Name="ProgramStatusLabel"></Label>
                    </StatusBar>
                    <ListBox
                        Name="FileParsingOutput"
                        FontSize="14pt"
                        Grid.Row="3">
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="Консоль">
                <TextBox 
                     FontSize="14pt"
                     Grid.Row="1"
                     Name="ConsoleOutputText">
                </TextBox>
            </TabItem>
        </TabControl>

        <Grid Grid.Row="1">
            <TreeView
                Name="ParseTreeView"
                FontFamily="Courier New"
                FontSize="14pt"
                SelectedItemChanged="ParseTreeView_SelectedItemChanged">
            </TreeView>
        </Grid>
    </Grid>
</Window>
