<Window x:Class="TestGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestGUI"
        xmlns:avalonedit="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="25*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="31"></RowDefinition>
        </Grid.RowDefinitions>

        <StatusBar 
            Name="ProgramStatus"
            Grid.Row="2" 
            Grid.ColumnSpan="3">
            <Label Name="ProgramStatusLabel"></Label>
        </StatusBar>

        <ToolBar Grid.Row="0" Grid.ColumnSpan="3">
            <Button Name="OpenFileButton" Content="Открыть" Click="OpenFileButton_Click"/>
            <Separator></Separator>
            <RadioButton GroupName="LanguageRadioButton" Name="LanguageSharpRadio" Content="C#" IsChecked="True"/>
            <RadioButton GroupName="LanguageRadioButton" Name="LanguageYaccRadio" Content="YACC" />
            <RadioButton GroupName="LanguageRadioButton" Name="LanguageExprRadio" Content="Expr" />
            <Separator></Separator>
            <RadioButton GroupName="ParsingTypeRadioButton" Name="ParsingLL" Content="LL" IsChecked="True"/>
            <RadioButton GroupName="ParsingTypeRadioButton" Name="ParsingLR" Content="LR" />
        </ToolBar>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70*"></RowDefinition>
                <RowDefinition Height="30*"></RowDefinition>
            </Grid.RowDefinitions>

            <avalonedit:TextEditor
                Name="Editor"
                Grid.Row="0"
                FontFamily="Consolas"
                FontSize="12pt">
            </avalonedit:TextEditor>

            <ListBox
                Name="OutputList"
                FontSize="14pt"
                Grid.Row="1">
            </ListBox>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="90*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
            </Grid.RowDefinitions>

            <TreeView
                Name="ParseTreeView"
                FontFamily="Courier New"
                FontSize="14pt"
                Grid.Row="0"
                SelectedItemChanged="ParseTreeView_SelectedItemChanged">
            </TreeView>

            <Button
                Name="ParseButton"
                Grid.Row="1"
                Click="ParseButton_Click">
                Разобрать текст
            </Button>
        </Grid>

        <TextBox Grid.Column="2" 
                 FontSize="14pt"
                 Grid.Row="1"
                 Name="ConsoleOutputText">
        </TextBox>
    </Grid>
</Window>
